        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@ui-part/*": ["ui-part/*"]
        },
        "types": ["cypress", "node", "jest"]
